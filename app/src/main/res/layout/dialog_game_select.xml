<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/dialog_game_select">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Game"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/game_selection_group">

        <RadioButton
            android:id="@+id/radio_tictactoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TicTacToe"/>

        <RadioButton
            android:id="@+id/radio_mancala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mancala"/>

        <RadioButton
            android:id="@+id/radio_checkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkers"/>

        <RadioButton
            android:id="@+id/radio_chess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chess"/>

        <RadioButton
            android:id="@+id/radio_dotsandboxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dots And Boxes"/>

    </RadioGroup>


</LinearLayout>